<Window x:Class="UrlProxy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        Title="UrlProxy"
        Height="600" Width="600"
        MinHeight="550" MinWidth="500"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing"
        StateChanged="Window_StateChanged">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top: Control Area -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: QR Code + Button -->
            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <Border Background="White" CornerRadius="8" Padding="8"
                        BorderBrush="#E0E0E0" BorderThickness="1">
                    <Image x:Name="QRCodeImage"
                           Source="{Binding QRCodeImage}"
                           Width="120" Height="120"
                           RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                </Border>
                <Button Content="{Binding ButtonText}"
                        Style="{StaticResource PrimaryButton}"
                        Margin="0,12,0,0"
                        Click="ToggleServer_Click"/>
            </StackPanel>

            <!-- Right: Proxy Server Info + Settings -->
            <Border Grid.Column="1" Background="#F8F8F8" CornerRadius="8" Padding="15">
                <StackPanel>
                    <!-- Status -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <Ellipse Width="10" Height="10"
                                 Fill="{Binding StatusColor}"
                                 VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding StatusText}"
                                   FontSize="14" FontWeight="Bold"
                                   Margin="8,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Proxy Server Info -->
                    <TextBlock Text="Proxy Server (for mobile connection)" FontSize="12" FontWeight="SemiBold"
                               Foreground="#555" Margin="0,0,0,8"/>
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Local IP"
                                   Foreground="#888" FontSize="12" Margin="0,0,0,4"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding WiFiIP}"
                                   FontSize="12" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <Button Grid.Row="0" Grid.Column="2" Content="Copy"
                                Style="{StaticResource SmallButton}"
                                Click="CopyIP_Click" Margin="0,0,0,4"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="URL"
                                   Foreground="#888" FontSize="12"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ConnectionUrl}"
                                   FontSize="12" FontWeight="SemiBold"
                                   TextTrimming="CharacterEllipsis"/>
                        <Button Grid.Row="1" Grid.Column="2" Content="Copy"
                                Style="{StaticResource SmallButton}"
                                Click="CopyUrl_Click"/>
                    </Grid>

                    <!-- Settings (Collapsible) -->
                    <Expander Header="Settings" IsExpanded="False">
                        <StackPanel Margin="0,10,0,0">
                            <!-- Proxy Server Settings -->
                            <TextBlock Text="▸ Proxy Server" FontSize="11" FontWeight="SemiBold"
                                       Foreground="#666" Margin="0,0,0,8"/>
                            <Grid Margin="10,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Listen Port"
                                           VerticalAlignment="Center" Foreground="#666" FontSize="12"/>
                                <TextBox Grid.Row="0" Grid.Column="1"
                                         Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding CanEditSettings}"
                                         Padding="6,4" Margin="0,0,0,6" FontSize="12"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Use HTTPS"
                                           VerticalAlignment="Center" Foreground="#666" FontSize="12"/>
                                <CheckBox Grid.Row="1" Grid.Column="1"
                                          IsChecked="{Binding UseHttps}"
                                          IsEnabled="{Binding CanEditSettings}"
                                          VerticalAlignment="Center" Margin="0,0,0,6"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Firewall Rule"
                                           VerticalAlignment="Center" Foreground="#666" FontSize="12"/>
                                <TextBox Grid.Row="2" Grid.Column="1"
                                         Text="{Binding FirewallRuleName, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding CanEditSettings}"
                                         Padding="6,4" FontSize="12"/>
                            </Grid>

                            <!-- Forward Target Settings -->
                            <TextBlock Text="▸ Forward Target (Local API)" FontSize="11" FontWeight="SemiBold"
                                       Foreground="#666" Margin="0,0,0,8"/>
                            <Grid Margin="10,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="API URL"
                                           VerticalAlignment="Center" Foreground="#666" FontSize="12"/>
                                <TextBox Grid.Column="1"
                                         Text="{Binding TargetUrl, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding CanEditSettings}"
                                         Padding="6,4" FontSize="12"/>
                            </Grid>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Bottom: Logs -->
        <Border Grid.Row="1" Background="#F8F8F8" CornerRadius="8" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <DockPanel Grid.Row="0" Margin="0,0,0,10">
                    <TextBlock Text="Logs" FontSize="13" FontWeight="SemiBold"
                               Foreground="#333" VerticalAlignment="Center"/>
                    <Button Content="Clear" Style="{StaticResource SmallButton}"
                            HorizontalAlignment="Right"
                            Click="ClearLogs_Click"/>
                </DockPanel>

                <ListBox Grid.Row="1"
                         ItemsSource="{Binding Logs}"
                         FontFamily="Consolas"
                         FontSize="11"
                         Background="White"
                         BorderThickness="1"
                         BorderBrush="#E0E0E0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" TextTrimming="CharacterEllipsis"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- System Tray Icon -->
        <tb:TaskbarIcon x:Name="TrayIcon"
                        ToolTipText="UrlProxy"
                        DoubleClickCommand="{Binding}"
                        TrayMouseDoubleClick="TrayIcon_TrayMouseDoubleClick">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Show Window" Click="ShowWindow_Click"/>
                    <MenuItem Header="Start/Stop" Click="ToggleServer_Click"/>
                    <Separator/>
                    <MenuItem Header="Exit" Click="Exit_Click"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Grid>
</Window>
