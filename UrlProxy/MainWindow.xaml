<Window x:Class="UrlProxy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        Title="API Proxy Server"
        Height="600" Width="600"
        MinHeight="550" MinWidth="500"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing"
        StateChanged="Window_StateChanged">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 上半部：控制區 -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左側：QR Code + 按鈕 -->
            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <Border Background="White" CornerRadius="8" Padding="8"
                        BorderBrush="#E0E0E0" BorderThickness="1">
                    <Image x:Name="QRCodeImage"
                           Source="{Binding QRCodeImage}"
                           Width="120" Height="120"
                           RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                </Border>
                <Button Content="{Binding ButtonText}"
                        Style="{StaticResource PrimaryButton}"
                        Margin="0,12,0,0"
                        Click="ToggleServer_Click"/>
            </StackPanel>

            <!-- 右側：代理伺服器資訊 + 設定 -->
            <Border Grid.Column="1" Background="#F8F8F8" CornerRadius="8" Padding="15">
                <StackPanel>
                    <!-- 狀態列 -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <Ellipse Width="10" Height="10"
                                 Fill="{Binding StatusColor}"
                                 VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding StatusText}"
                                   FontSize="14" FontWeight="Bold"
                                   Margin="8,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- 代理伺服器資訊 -->
                    <TextBlock Text="代理伺服器（手機連線用）" FontSize="12" FontWeight="SemiBold"
                               Foreground="#555" Margin="0,0,0,8"/>
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="本機 IP"
                                   Foreground="#888" FontSize="12" Margin="0,0,0,4"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding WiFiIP}"
                                   FontSize="12" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <Button Grid.Row="0" Grid.Column="2" Content="複製"
                                Style="{StaticResource SmallButton}"
                                Click="CopyIP_Click" Margin="0,0,0,4"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="連線網址"
                                   Foreground="#888" FontSize="12"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ConnectionUrl}"
                                   FontSize="12" FontWeight="SemiBold"
                                   TextTrimming="CharacterEllipsis"/>
                        <Button Grid.Row="1" Grid.Column="2" Content="複製"
                                Style="{StaticResource SmallButton}"
                                Click="CopyUrl_Click"/>
                    </Grid>

                    <!-- 設定（收合式） -->
                    <Expander Header="設定" IsExpanded="False">
                        <StackPanel Margin="0,10,0,0">
                            <!-- 代理伺服器設定 -->
                            <TextBlock Text="▸ 代理伺服器" FontSize="11" FontWeight="SemiBold"
                                       Foreground="#666" Margin="0,0,0,8"/>
                            <Grid Margin="10,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="監聽 Port"
                                           VerticalAlignment="Center" Foreground="#666" FontSize="12"/>
                                <TextBox Grid.Row="0" Grid.Column="1"
                                         Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding CanEditSettings}"
                                         Padding="6,4" Margin="0,0,0,6" FontSize="12"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="使用 HTTPS"
                                           VerticalAlignment="Center" Foreground="#666" FontSize="12"/>
                                <CheckBox Grid.Row="1" Grid.Column="1"
                                          IsChecked="{Binding UseHttps}"
                                          IsEnabled="{Binding CanEditSettings}"
                                          VerticalAlignment="Center" Margin="0,0,0,6"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="防火牆規則"
                                           VerticalAlignment="Center" Foreground="#666" FontSize="12"/>
                                <TextBox Grid.Row="2" Grid.Column="1"
                                         Text="{Binding FirewallRuleName, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding CanEditSettings}"
                                         Padding="6,4" FontSize="12"/>
                            </Grid>

                            <!-- 轉發目標設定 -->
                            <TextBlock Text="▸ 轉發目標（本機 API）" FontSize="11" FontWeight="SemiBold"
                                       Foreground="#666" Margin="0,0,0,8"/>
                            <Grid Margin="10,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="API 網址"
                                           VerticalAlignment="Center" Foreground="#666" FontSize="12"/>
                                <TextBox Grid.Column="1"
                                         Text="{Binding TargetUrl, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding CanEditSettings}"
                                         Padding="6,4" FontSize="12"/>
                            </Grid>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 下半部：連線記錄 -->
        <Border Grid.Row="1" Background="#F8F8F8" CornerRadius="8" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <DockPanel Grid.Row="0" Margin="0,0,0,10">
                    <TextBlock Text="連線記錄" FontSize="13" FontWeight="SemiBold"
                               Foreground="#333" VerticalAlignment="Center"/>
                    <Button Content="清除" Style="{StaticResource SmallButton}"
                            HorizontalAlignment="Right"
                            Click="ClearLogs_Click"/>
                </DockPanel>

                <ListBox Grid.Row="1"
                         ItemsSource="{Binding Logs}"
                         FontFamily="Consolas"
                         FontSize="11"
                         Background="White"
                         BorderThickness="1"
                         BorderBrush="#E0E0E0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" TextTrimming="CharacterEllipsis"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- 系統匣圖示 -->
        <tb:TaskbarIcon x:Name="TrayIcon"
                        ToolTipText="API Proxy Server"
                        DoubleClickCommand="{Binding}"
                        TrayMouseDoubleClick="TrayIcon_TrayMouseDoubleClick">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="開啟主視窗" Click="ShowWindow_Click"/>
                    <MenuItem Header="啟動/停止" Click="ToggleServer_Click"/>
                    <Separator/>
                    <MenuItem Header="結束" Click="Exit_Click"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Grid>
</Window>
